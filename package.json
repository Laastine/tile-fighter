{
  "name": "tile-fighter",
  "private": true,
  "dependencies": {
    "pixi.js": "https://github.com/pixijs/pixi.js/archive/v3.0.9.tar.gz"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.3.26",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "colors": "^1.1.2",
    "nodemon": "^1.8.1",
    "supervisor": "^0.9.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build-js": "node node_modules/browserify/bin/cmd.js --entry src/app.js | node_modules/uglify-js/bin/uglifyjs --compress --mangle > .generated/bundle.js",
    "watch-js": "node node_modules/watchify/bin/cmd.js src/app.js --debug -o .generated/bundle.js -v"
  }
}
