{
  "name": "tile-fighter",
  "description": "Tile based strategy game",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "mersenne-twister": "^1.0.1",
    "pixi.js": "https://github.com/pixijs/pixi.js/archive/v3.0.9.tar.gz"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.3.26",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "13.0.0",
    "eslint": "^1.10.3",
    "nodemon": "^1.8.1",
    "supervisor": "^0.9.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build": "node node_modules/browserify/bin/cmd.js --entry src/app.js | node_modules/uglify-js/bin/uglifyjs --compress --mangle > .generated/bundle.js",
    "watch": "node node_modules/watchify/bin/cmd.js src/app.js --debug -o .generated/bundle.js -v",
    "lint": "eslint src/ ",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
