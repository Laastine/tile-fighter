{
  "name": "tile-fighter",
  "description": "Tile based strategy game",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "lodash": "4.5.1",
    "mersenne-twister": "1.0.1",
    "pixi.js": "https://github.com/pixijs/pixi.js/archive/v3.0.9.tar.gz"
  },
  "devDependencies": {
    "browserify": "13.0.0",
    "chai": "3.5.0",
    "mocha": "2.4.5",
    "nodemon": "1.9.1",
    "supervisor": "0.9.1",
    "tsconfig-glob": "0.4.1",
    "tsconfig-lint": "0.6.0",
    "tsify": "0.13.2",
    "typescript": "1.7.5",
    "uglify-js": "2.6.2",
    "watchify": "3.7.0"
  },
  "scripts": {
    "build": "node tsconfig && browserify src/app.ts -p tsify -o .generated/bundle.js",
    "watch": "node node_modules/watchify/bin/cmd.js src/app.ts -p tsify --debug -o .generated/bundle.js -v",
    "lint": "tsconfig-lint",
    "test": "_mocha --compilers js:babel-core/register -R spec test/calcSpec.js"
  }
}
